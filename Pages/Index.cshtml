@page
<head>
<title>Prototype UI</title>
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
</head>
<body>
<div class="container-fluid">
<div class="row no-gutters">
    <!-- 2 column div for navbar -->
    <div class="col-3">
        <nav id="navbar">
            <ul id="navlist">
                <li class="navlabel">
                    <text>Chat Rooms</text>
                </li>
                <div id="buttonlist" class="btn-group-justified btn-group-vertical">
                    <button type="button" class="btn btn-info" id="channelID_0" onclick="changeChannel(0)" disabled>open-chat</button>
                    <button type="button" class="btn btn-outline-success" id="addChannel">Add chat room</button>
                    <button type="button" class="btn btn-outline-success" id="requestChat">Request private chat with professor</button>
                 </div>
            </ul>
        </nav>
    </div>
    <!-- 8 column div for chatbox that shows messages -->
    <div class="col-6">
        <div id="chatbox">
            <!-- New messages will go here -->
        </div>
        <div id="messagebox">
                <label for="messageInput">New Message:</label><br>
                <input type="text" id="messageInput" name="messageInput">
        </div>
    </div>
    <div class="col-3">
        <ul id="usersShown">
            <li>
                Users in room
            </li>
            <!-- Placeholders -->
            <li class="users">
                1
            </li>
            <li class="users">
                2
            </li>
        </ul>
    </div>
</div>
</div>
</body>
<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/chat.js"></script>